}

/* Style the header */
.header {
    background: #2cebc7; background: -moz-linear-gradient(225deg,  #2cebc7 0%,#8267d5 100%); background: -webkit-linear-gradient(225deg,  #2cebc7 0%,#8267d5 100%); background: linear-gradient(225deg,  #2cebc7 0%,#8267d5 100%);
    text-align: left;
    padding: 14px 50px;
    color: white;
}

/* Style the top navigation bar */
.topnav {
    overflow: hidden;
    background-color: #334;
    box-shadow:10px 5px 5px #29ABE2;
}

/* Style the topnav links */
.topnav a {
    float: right;
    display: block;
    color: black;
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
    color: white;
}

/* Change color on hover */
.topnav a:hover {
    background-color: #2cebc7;
    color: black;

}

p {
  font-family: "Courier New", Courier, monospace;
  text-align: left;
}

h6 {
  text-align: center;
}
  
}

h2, article {
  text-align: center;
}

h3 {
  text-decoration: underline;
  text-align: left;
  padding: 10px 10px;
}

li {
